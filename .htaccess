# Apache .htaccess for SPA + API routing

# Enable rewrite engine
RewriteEngine On
RewriteBase /

# CORS Headers
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
</IfModule>

# Handle OPTIONS preflight requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=204,L]

# Don't rewrite files or directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Rewrite API requests to PHP files
RewriteRule ^api/sessions(.*)$ api/sessions.php?action=$1 [L,QSA]
RewriteRule ^api/questions(.*)$ api/questions.php?action=$1 [L,QSA]
RewriteRule ^api/responses(.*)$ api/responses.php?action=$1 [L,QSA]
RewriteRule ^api/participants(.*)$ api/participants.php?action=$1 [L,QSA]

# Rewrite everything else to index.html (SPA routing)
RewriteRule ^ index.html [L]

# Prevent access to sensitive files
<FilesMatch "\.(sql|md|env)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# PHP settings (optional - uncomment if needed)
# php_value upload_max_filesize 10M
# php_value post_max_size 10M
# php_value max_execution_time 300

# Gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>
